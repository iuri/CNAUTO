ad_page_contract {
    NFe Manager list
} {
    {page ""}
    {keyword:optional}
}

auth::require_login

set title "[_ cnauto-account.NFE_manager]"
set context [list $title]

set return_url [ad_return_url]
set admin_p [permission::permission_p -party_id [ad_conn user_id] -object_id [ad_conn package_id] -privilege "admin"]

set actions ""
set bulk_actions ""

if {$admin_p} {
    set bulk_actions {"#cnauto-account.Delete#" "nfe-bulk-delete" "#cnauto-account.Delete_selected_nfes#"}
    set admin_url "[apm_package_url_from_id [ad_conn package_id]]admin"	      
}

set where_clause ""
if {[info exists keyword]} {
    set where_clause "WHERE (
      cr.code = :keyword 
      OR cr.name = lower(:keyword) 
      OR cr.pretty_name = :keyword)"
}

template::list::create \
    -name nfes \
    -multirow nfes \
    -key resource_id \
    -actions $actions \
    -row_pretty_plural "nfes" \
    -bulk_actions $bulk_actions \
    -bulk_action_method post \
    -page_flush_p t \
    -page_size 50 \
    -page_query_name nfe_pagination \
    -elements {
	code {
	    label "[_ cnauto-account.Code]"
	    display_template {
		<a href="@nfes.nfe_url@">@nfes.code;noquote@
	    }
	}
	pretty_name {
	    label "[_ cnauto-account.Name]"
	    display_template {
		<a href="@nfes.nfe_url@">@nfes.pretty_name;noquote@</a>
	    }
	}
	type {
	    label "[_ cnauto-account.Category]"
	    display_template {
		<a href="@nfes.category_url@">@resources.type;noquote@</a>
	    }
	}
	

    } -orderby {
	type {
	    label "[_ cnauto-account.Type]"
	    orderby "lower(cr.type)"
	}
    } 


db_multirow -extend {resource_url category_url} nfes select_nfes {
    select * from cn_resources
} {

    set nfe_url [export_vars -base "nfe-one" {return_url nfe_id}]
    set category_url [export_vars -base "/cnauto/cnauto-core/category-ae" {return_url {category_id $type_id} category_type}]
}

